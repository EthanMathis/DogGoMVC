@model DogGo.Models.ViewModels.WalkerViewModel

@{ ViewData["Title"] = "Profile"; }
<div>
    <h1 class="mb-4">Walker Profile</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Client
                        </th>
                        <th>
                            Duration
                        </th>
                    </tr>
                </thead>
                <tbody>
                    
                        @foreach (Walks walk in Model.Walks)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(Model => walk.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => walk.ClientName)
                        </td>
                        <td>
                            @(walk.Duration/60) minutes
                        </td>

                    </tr>
                        }
                </tbody>
            </table>
            
        </section>
        <section class="col-8 m-2">
            @{ int TotalTime = 0;}
            @for (int i = 0; i < Model.Walks.Count; i++)
            {
                TotalTime += Model.Walks[i].Duration;
            }
            <h2 class="text-right">Total Walk Time: @(TotalTime/60) minutes</h2>
        </section>

    </div>
</div>